{
  "expo": {
    "name": "LogIn - Productivity Tracker",
    "slug": "login-productivity-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.login",
      "buildNumber": "1",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This app uses advertising data to provide personalized ads and improve your experience.",
        "NSCameraUsageDescription": "This app uses the camera to let you take profile pictures.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to let you choose profile pictures.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-2058319813855923~4856464524"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yourcompany.login",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "com.android.vending.BILLING"
      ],
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-2058319813855923~9410501796"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "plugins": [
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.yourcompany.login",
          "enableGooglePay": true
        }
      ]
    ]
  }
}