{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "resourceClass": "m-medium"
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "ios": {
        "resourceClass": "m-medium",
        "autoIncrement": "buildNumber"
      },
      "android": {
        "autoIncrement": "versionCode"
      },
      "env": {
        "EXPO_PUBLIC_API_URL": "https://your-domain.com/api",
        "EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY": "pk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
        "EXPO_PUBLIC_ADMOB_APP_ID_IOS": "ca-app-pub-xxxxxxxxxxxxxxxx~xxxxxxxxxx",
        "EXPO_PUBLIC_ADMOB_APP_ID_ANDROID": "ca-app-pub-xxxxxxxxxxxxxxxx~xxxxxxxxxx",
        "EXPO_PUBLIC_ADMOB_BANNER_ID_IOS": "ca-app-pub-xxxxxxxxxxxxxxxx/xxxxxxxxxx",
        "EXPO_PUBLIC_ADMOB_BANNER_ID_ANDROID": "ca-app-pub-xxxxxxxxxxxxxxxx/xxxxxxxxxx",
        "EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID_IOS": "ca-app-pub-xxxxxxxxxxxxxxxx/xxxxxxxxxx",
        "EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID_ANDROID": "ca-app-pub-xxxxxxxxxxxxxxxx/xxxxxxxxxx"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-app-id",
        "appleTeamId": "your-apple-team-id"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account-key.json",
        "track": "internal"
      }
    }
  }
}